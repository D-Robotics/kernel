};

&iar {
	status = "okay";
};

&fb {
	status = "okay";
};

&bifspi {
	status = "okay";
};

&bifsd {
	status = "okay";
	/*cd-gpio = <91>;*/
};
&bifbase {
	/*x2j2 bifbase: GPIO7[8]: 118, GPIO0[7]: 7*/
	status = "okay";
	bifbase_irq_pin = <0x75>;
	bifbase_tri_pin = <0x76>;
};

&bifeth {
	status = "okay";
};

&biflite_spi {
	status = "okay";
	frame_len_max = <262144>;
	frag_len_max = <1024>;
	frame_count = <4>;
};
&biflite_sd {
	status = "okay";
	frame_len_max = <262144>;
	frag_len_max = <32768>;
	frame_count = <12>;
};
&nor_flash {
	status = "okay";
	qspi-mode = <1>;
	#address-cells = <1>;
	#size-cells = <0>;

	flash@0 {
		compatible = "gd25lq128d";
		#address-cells = <1>;
		#size-cells = <1>;
		reg = <0x0>;
		spi-tx-bus-width = <4>;
		spi-rx-bus-width = <4>;
		spi-max-frequency = <50000000>;

		partition@qspi-uboot {
			label = "qspi-uboot";
			reg = <0x200000 0x200000>;
		};
	};
};

&sdio0 {
	status = "okay";
	bus-width = <8>;
	cap-mmc-highspeed;
	mmc-hs200-1_8v;
	non-removable;
	disable-wp;
};

&sdio1 {
	status = "disabled";
	bus-width = <4>;
	no-mmc;
	no-sdio;
	cap-sd-highspeed;
	sd-uhs-sdr12;
	sd-uhs-sdr25;
	sd-uhs-sdr50;
	sd-uhs-sdr104;
	powerup-gpio = <85>;
	uhs-180v-gpio = <86>;
	broken-cd;
	disable-wp;
};

&watchdog {
	status = "okay";
};

&i2s0 {
	status = "okay";
	clocks = <&i2s0_mclk>, <&i2s0_div_mclk>, <&i2s0_bclk>, <&i2s0_div_bclk>;
	clock-names = "i2s-mclk", "i2s-mclk-div", "i2s-bclk", "i2s0_div_bclk";
	bclk_set = <4096000>;
	slot_width= <256>;
};


&ddr_monitor {
	status = "okay";
};

&onewire {
	status = "okay";
};

&temp {
	status = "okay";
};

&soc_thermal {
	status = "okay";
};
