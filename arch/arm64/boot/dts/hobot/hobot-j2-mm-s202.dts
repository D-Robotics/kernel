/dts-v1/;
#include "hobot.dtsi"
#include "hobot-pinctrl.dtsi"
#include "hobot-clk.dtsi"
#include "memory.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/phy/phy.h>

/ {
	reserved-memory {
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;

		/*Reserved 4M memory for ipu problem*/
		ipu_nouse_reserved: ipu_nouse_reserved@0x00000000 {
			reg = <0x0 0x00000000 0x0 0x00400000>;
			no-map;
		};
		/*Reserved 8M memory for isp_subsystem*/
		isp_reserved: isp_reserved@0x02100000 {
			reg = <0x0 0x02100000 0x0 0x00800000>;
		};

		/*Reserved 32M memory for iar subsystem*/
		iar_reserved: iar_reserved@0x02900000 {
			reg = <0x0 0x02900000 0x0 0x2000000>;
			no-map;
		};

		/* Reserved 384MB memory for bpu+vio*/
		ion_reserved: ion_reserved@0x4900000 {
			compatible = "ion-pool";
			reg = <0x0 0x4900000 0x0 0x18000000>;
		};
	};
};


/ {
	model = "Hobot J2 DEV board";
	compatible = "hobot,x2-fpga";

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
		serial2 = &uart2;
		serial3 = &uart3;
		i2c0	= &i2c0;
		i2c1	= &i2c1;
		i2c2	= &i2c2;
		i2c3	= &i2c3;
		i2s0	= &i2s0;
		i2s1	= &i2s1;
		pwm0	= &pwm_0;
		pwm1	= &pwm_1;
		pwm2	= &pwm_2;
		spi0	= &spi0;
		bifsd	= &bifsd;
		bifspi	= &bifspi;
		mmc1	= &sdio0;
		mmc2	= &sdio1;
		sndcard0    = &snd0;
		idma0     = &i2sidma0;

	};

	chosen {
		bootargs = "earlycon loglevel=8 console=ttyS0 clk_ignore_unused";
		stdout-path = "serial0:115200n8";
	};

};

&i2c0 {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	x2_codec@0x35 {
		compatible = "ac108_0";
		reg = <0x35>;
	};

	x2_codec@0x4a {
		compatible = "ti1864";
		reg = <0x4a>;
	};


	x2_camera@0x7f {
	    compatible = "x2,camera";
	    reg = <0x7f>;
	};
	tmp75c@48 {
                compatible = "ti,tmp75c";
		reg = <0x48>;
	};
	mpq7920@69 {
		compatible = "mps,mpq7920";
		reg = <0x69>;
		regulators {
			vcc_cnn0_reg: DCDC1 {
				regulator-name = "VCC_CNN0";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1000000>;
				regulator-enable-ramp-delay = <3000>;
				regulator-boot-on;
			};

			vdd_core_pd_reg: DCDC2 {
				regulator-name = "VDD_CORE_PD";
				regulator-min-microvolt = <900000>;
				regulator-max-microvolt = <900000>;
				regulator-always-on;
			};

			vcc_cnn1_reg: DCDC3 {
				regulator-name = "VCC_CNN1";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1000000>;
				regulator-enable-ramp-delay = <3000>;
				regulator-boot-on;
			};

			vcc_cpu_reg: DCDC4 {
				regulator-name = "VCC_CPU";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1000000>;
				regulator-always-on;
			};

			vdd_core_ao_reg: LDO3 {
				regulator-name = "VDD_CORE_AO";
				regulator-min-microvolt = <900000>;
				regulator-max-microvolt = <900000>;
				regulator-always-on;
			};

			vdd_1v8_reg: LDO4 {
				regulator-name = "VDD_1V8";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
				regulator-always-on;
			};

			vdd_0v9_reg: LDO5 {
				regulator-name = "VDD_0V9";
				regulator-min-microvolt = <900000>;
				regulator-max-microvolt = <900000>;
				regulator-always-on;
			};
		};
	};
	siiEDID@0x50 {
		compatible = "siiEDID";
		reg = <0x50>;
	};
	siiSegEDID@0x30 {
		compatible = "siiSegEDID";
		reg = <0x30>;
	};
	sii902xA@0x3B {
		compatible = "sii902xA";
		reg = <0x3B>;
		rst_pin = <61>;
		irq_pin = <77>;
	};
};

&pinctrl {
	status = "okay";
	gpioirq-bank-cfg = <0x75 0 0 0>;
};

&uart0 {
	status = "okay";
	clocks = <&uart0_mclk>;
	clock-names = "uart_mclk";
};

&ips {
	pinctrl-names = "bt_func", "dvp_func";
	pinctrl-0 = <&btout_func>;
	pinctrl-1 = <&dvpout_func>;
	status = "okay";
};

&isp {
	status = "okay";
};

&ipu {
	status = "okay";
	slot_num = /bits/ 8 <8>;
	slot_size = <0x1000000>;
};

&sif {
	status = "okay";
};
&mipi_host {
	status = "okay";
};

&mipi_dev {
	status = "okay";
};

&dma {
	status = "okay";
};

&x2dmatest {
	status = "disabled";
};

&rtc {
	status = "okay";
};

&pwm_0 {
	status = "disabled";
};

&spi0 {
	status = "okay";
};

&ethernet {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&eth_func>;

	/* local-mac-address = [ 00 11 22 33 44 55 ]; */
