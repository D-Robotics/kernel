#include "memory.dtsi"
/ {
	reserved-memory {
		/*Reserved 8M memory for isp_subsystem*/
		isp_reserved: isp_reserved@0x02101000 {
			reg = <0x0 0x02101000 0x0 0x00800000>;
		};

		iar_reserved: iar_reserved@0x02901000 {
			reg = <0x0 0x02901000 0x0 0x2F76000>;
			no-map;
		};

		/* Reserved 512MB memory for ipu subsystem */
		ipu_reserved: ipu_reserved@0x058B7000 {
			reg = <0x0 0x058B7000 0x0 0x20000000>;
			/*no-map;*/
		};

		/* Reserved 512MB memory for ion*/
		ion_reserved: ion_reserved@0x258E7000 {
			compatible = "ion-pool";
			reg = <0x0 0x258E7000 0x0 0x20000000>;
		};
	};
};
