/dts-v1/;
#include "hobot.dtsi"
#include "hobot-pinctrl.dtsi"
#include "hobot-clk.dtsi"
#include "memory-1g.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/phy/phy.h>

/ {
	model = "Hobot J2 SOM";
	compatible = "hobot,x2-fpga";

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
		serial2 = &uart2;
		serial3 = &uart3;
		i2c0	= &i2c0;
		i2c1	= &i2c1;
		i2c2	= &i2c2;
		i2c3	= &i2c3;
		i2s0	= &i2s0;
		i2s1	= &i2s1;
		pwm0	= &pwm_0;
		pwm1	= &pwm_1;
		pwm2	= &pwm_2;
		spi0	= &spi0;
		bifsd	= &bifsd;
		bifspi	= &bifspi;
		mmc1	= &sdio0;
		mmc2	= &sdio1;
		sndcard0    = &snd0;
		idma0     = &i2sidma0;

	};

	chosen {
		bootargs = "earlycon loglevel=8 console=ttyS0 clk_ignore_unused";
		stdout-path = "serial0:115200n8";
	};

};

&i2c0 {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	x2_codec@0x35 {
		compatible = "ac108_0";
		reg = <0x35>;
	};
	x2_camera@0x7f {
	    compatible = "x2,camera";
	    reg = <0x7f>;
	};
	tmp75c@48 {
                compatible = "ti,tmp75c";
		reg = <0x48>;
	};
	mpq7920@69 {
		compatible = "mps,mpq7920";
		reg = <0x69>;
		regulators {
			vcc_cnn0_reg: DCDC1 {
				regulator-name = "VCC_CNN0";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1000000>;
				regulator-enable-ramp-delay = <3000>;
			};

			vdd_core_pd_reg: DCDC2 {
				regulator-name = "VDD_CORE_PD";
				regulator-min-microvolt = <900000>;
				regulator-max-microvolt = <900000>;
				regulator-always-on;
			};

			vcc_cnn1_reg: DCDC3 {
				regulator-name = "VCC_CNN1";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1000000>;
				regulator-enable-ramp-delay = <3000>;
			};

			vcc_cpu_reg: DCDC4 {
				regulator-name = "VCC_CPU";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1000000>;
				regulator-always-on;
			};

			vdd_core_ao_reg: LDO3 {
				regulator-name = "VDD_CORE_AO";
				regulator-min-microvolt = <900000>;
				regulator-max-microvolt = <900000>;
				regulator-always-on;
			};

			vdd_1v8_reg: LDO4 {
				regulator-name = "VDD_1V8";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
				regulator-always-on;
			};

			vdd_0v9_reg: LDO5 {
				regulator-name = "VDD_0V9";
				regulator-min-microvolt = <900000>;
				regulator-max-microvolt = <900000>;
				regulator-always-on;
			};
		};
	};
};

&pinctrl {
	status = "okay";
	gpioirq-bank-cfg = <117 109 0 0>;
};

&uart0 {
	status = "okay";
	clocks = <&uart0_mclk>;
	clock-names = "uart_mclk";
};

&uart1 {
	status = "okay";
	clocks = <&uart1_mclk>;
	clock-names = "uart_mclk";
};

&ips {
	//pinctrl-names = "bt_func", "dvp_func";
	//pinctrl-0 = <&btin_func &btout_func>;
	//pinctrl-1 = <&dvpin_func &dvpout_func>;
	status = "okay";
};

&isp {
	status = "okay";
};

&ipu {
	status = "okay";
	slot_num = /bits/ 8 <8>;
	slot_size = <0x1000000>;
};

&sif {
	status = "okay";
};
&mipi_host {
	status = "okay";
};

&mipi_dev {
	status = "okay";
};

&dma {
	status = "okay";
};

&x2dmatest {
	status = "disabled";
};

&rtc {
	status = "okay";
};

&pwm_0 {
	status = "disabled";
};

&spi0 {
	status = "okay";
};

&ethernet {
	status = "okay";

	pinctrl-names = "default";
	pinctrl-0 = <&eth_func>;

	/* local-mac-address = [ 00 11 22 33 44 55 ]; */
	fixed-link = <0 1 1000 0 0>;
	phy-mode = "rgmii-id";
	mdio {
		#address-cells = <0x1>;
		#size-cells = <0x0>;
	};
};

&cpu0 {
	status = "okay";
	cnn0-supply = <&vcc_cpu_reg>;
};

&cnn0 {
	status = "okay";
	cnn-supply = <&vcc_cnn0_reg>;
};

&cnn1 {
	status = "okay";
	cnn-supply = <&vcc_cnn1_reg>;
};

&iar {
	status = "okay";
};

&fb {
	status = "okay";
};

&bifspi {
	status = "okay";
};

&bifsd {
	status = "okay";
	/*cd-gpio = <91>;*/
};

&bifbase {
	/*x2j2 bifbase: GPIO7[8]: 117, GPIO0[7]: 7*/
	status = "okay";
	bifbase_irq_pin = <117>;
	bifbase_tri_pin = <7>;
};

&bifeth {
	status = "okay";
};

&mcu_irq {
	mcu_tri_pin = <107>;
	mcu_irq_pin = <109>;
	status = "okay";
};

&biflite_spi {
	status = "okay";
	frame_len_max = <262144>;
	frag_len_max = <1024>;
	frame_count = <4>;
};
&nor_flash {
	status = "okay";
	qspi-mode = <1>;
	#address-cells = <1>;
	#size-cells = <0>;

	flash@0 {
		compatible = "gd25lq128d";
		#address-cells = <1>;
		#size-cells = <1>;
		reg = <0x0>;
		spi-tx-bus-width = <4>;
		spi-rx-bus-width = <4>;
		spi-max-frequency = <50000000>;

		partition@qspi-uboot {
			label = "qspi-uboot";
			reg = <0x200000 0x200000>;
		};
	};
};

&sdio0 {
	status = "okay";
	bus-width = <8>;
	cap-mmc-highspeed;
	mmc-hs200-1_8v;
	non-removable;
	disable-wp;
};

&watchdog {
	status = "okay";
};

&i2s0 {
	status = "okay";
};


&ddr_monitor {
	status = "okay";
};

&onewire {
	status = "okay";
};

&temp {
	status = "okay";
};

&soc_thermal {
	status = "okay";
	trips {
		target: trip-point@1 {
			temperature = <105000>;
		};
		soc_crit: soc-crit {
			temperature = <120000>;
		};
	};
};
