&ethernet {
	status = "okay";

	/* local-mac-address = [ 00 11 22 33 44 55 ]; */
	phy-handle = <&phy1>;
	phy-mode = "rgmii-id";
	mdio {
		#address-cells = <0x1>;
		#size-cells = <0x0>;
		phy1: phy@e {
			compatible = "marvell,88E1111","ethernet-phy-ieee802.3-c22";
			reg = <0xe>;
		};
	};
};


&iar {
        status = "okay";
};

&fb {
	status = "okay";
};

&bifspi {
	/* pin conflict: BIFSPI_SCLK(gpio28) - see 902xAA rst_pin */
	status = "disabled";
};

&bifsd {
	/* pin conflict: BIFSD_CMD(gpio21) - see 902xAA irq_pin */
	status = "disabled";
	/*cd-gpio = <77>;*/
};

&bifbase {
	status = "disabled";
	bifbase_irq_pin = <85>;
	bifbase_tri_pin = <84>;
};

&bifeth {
	status = "disabled";
};

&nor_flash {
	status = "disabled";
	#address-cells = <1>;
	#size-cells = <0>;
	qspi-mode = <4>;

	flash@0 {
		compatible = "is25wp512";
		#address-cells = <1>;
		#size-cells = <1>;
		reg = <0x0>;
		spi-max-frequency = <50000000>; /* For FPGA max clk is 20Mhz */

		partition@qspi-system {
			label = "qspi-system";
			reg = <0x1700000 0x2000000>;
		};

		partition@qspi-app {
			label = "qspi-app";
			reg = <0x3700000 0x900000>;
		};

		partition@qspi-boot {
			label = "qspi-boot";
			reg = <0x0 0x4000000>;
		};
	};
};

&nand_flash {
	status = "disabled";
	#address-cells = <1>;
	#size-cells = <0>;
	qspi-mode = <4>;

	spi-nand@0 {
		compatible = "spi-nand";
		#address-cells = <1>;
		#size-cells = <1>;
		reg = <0x0>;
		spi-tx-bus-width = <4>;
		spi-rx-bus-width = <4>;
		spi-max-frequency = <50000000>; /* For FPGA max clk is 20Mhz */
	};
};

&sdio0 {
	status = "okay";
	bus-width = <4>;
	cap-mmc-highspeed;
	mmc-hs200-1_8v;
	non-removable;
	disable-wp;
};

&sdio1 {
	status = "okay";
	bus-width = <4>;
	no-mmc;
	cap-sd-highspeed;
	sd-uhs-sdr12;
	sd-uhs-sdr25;
	sd-uhs-sdr50;
	sd-uhs-sdr104;
	uhs-180v-gpio = <120>;
	uhs-180v-logic = <1>;
	broken-cd;
	disable-wp;
};

&sdio2 {
/*	status = "okay"; */
	bus-width = <4>;
	no-mmc;
	cap-sd-highspeed;
	sd-uhs-sdr12;
	sd-uhs-sdr25;
	sd-uhs-sdr50;
	sd-uhs-sdr104;
	powerup-gpio = <2>;
	broken-cd;
	disable-wp;
};

&watchdog {
	status = "okay";
};

&timer1 {
	status = "okay";
};

&i2s0 {
	status = "okay";
	#sound-dai-cells = <0>;
	clocks = <&i2s0_mclk>, <&i2s0_bclk>;
	clock-names = "i2s-mclk", "i2s-bclk";
	//bclk_set = <1536000>; //duplex
};

&i2s1 {
	status = "okay";
	#sound-dai-cells = <0>;
