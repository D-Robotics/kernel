&iar {
        status = "okay";
	timing_1920x1080 = <163000000 148 88 44 36 4 5>;
	timing_800x480 = <32000000 80 120 48 32 43 2>;
	timing_1080x1920 = <32000000 100 400 5 4 400 5>;
	timing_720x1280_touch = <54000000 100 100 10 20 10 10>;
	timing_704x576 = <27000000 288 0 0 22 2 0>;
	timing_720x480 = <27000000 276 0 0 19 3 0>;
	startup-img = <0>;
	pwm = <0 1000 10>;//pwm-no, period, duty
	bt656_pin_group = <0>;
	btclk_invert = <0>;
};

&fb {
	status = "okay";
	offset-rgba = <8 16 24 0>;
};

&bifspi {
	/* pin conflict: BIFSPI_SCLK(gpio28) - see 902xAA rst_pin */
	status = "disabled";
};

&bifsd {
	/* pin conflict: BIFSD_CMD(gpio21) - see 902xAA irq_pin */
	status = "disabled";
	/*cd-gpio = <77>;*/
};

&bifbase {
	status = "disabled";
	bifbase_irq_pin = <85>;
	bifbase_tri_pin = <84>;
};

&bifeth {
	status = "disabled";
};

&nor_flash {
	status = "disabled";
	#address-cells = <1>;
	#size-cells = <0>;
	spi-mode = <0>;		/* CPOL/CPHA mode */
	bus-width = <4>;
	device-name = "hr_nor";

	flash@0 {
		compatible = "jedec,spi-nor";
		#address-cells = <1>;
		#size-cells = <1>;
		reg = <0x0>;
		spi-max-frequency = <62500000>; /* For FPGA max clk is 20Mhz */
	};
};

&nand_flash {
	status = "disabled";
	#address-cells = <1>;
	#size-cells = <0>;
	spi-mode = <0>;		/* CPOL/CPHA mode */
	bus-width = <4>;
	device-name = "hr_nand";

	spi-nand@0 {
		compatible = "spi-nand";
		#address-cells = <1>;
		#size-cells = <1>;
		reg = <0x0>;
		spi-max-frequency = <62500000>; /* For FPGA max clk is 20Mhz */
	};
};

&sdio0 {
	status = "okay";
	bus-width = <8>;
	cap-mmc-highspeed;
	mmc-hs200-1_8v;
	non-removable;
	disable-wp;
};

&sdio1 {
	status = "okay";
	bus-width = <4>;
	no-mmc;
	cap-sd-highspeed;
	sd-uhs-sdr12;
	sd-uhs-sdr25;
	sd-uhs-sdr50;
	sd-uhs-sdr104;
	uhs-180v-gpio = <120>; /* QSPI_CSN1/GPIO7[8] */
	uhs-180v-logic = <1>;
	cd-gpios = <&gpios 64 GPIO_ACTIVE_HIGH>;  /* SD0_DET_N /GPIO4[0] */
	/* broken-cd; */
	disable-wp;
	pinctrl-names = "default","voltage_1_8v","voltage_3_3v";
	pinctrl-0 = <&sdio1_func>;
	pinctrl-1 = <&sd1_1_8v_func>;
	pinctrl-2 = <&sd1_3_3v_func>;
};

&sdio2 {
	status = "disabled";
	bus-width = <4>;
	no-mmc;
	cap-sdio-irq;
	cap-sd-highspeed;
	sd-uhs-sdr12;
	sd-uhs-sdr25;
	sd-uhs-sdr50;
	sd-uhs-sdr104;
	broken-cd;
	disable-wp;
};

