&snd0 {
        model = "hobotsnd0";
        dai-link@0 {
                dai-format = "dsp_a";
                //dai-format = "i2s";   //duplex
                bitclock-master;
                frame-master;
                frame-inversion;
                link-name = "hobotdailink0";
                cpu {
                        sound-dai = <&i2s0>;
                };
                codec {
                        //sound-dai = <&ac101>;    //duplex
                        sound-dai = <&ac108_0 0>;
                };
                platform {
                        sound-dai = <&i2sidma0>;
                };
        };
        dai-link@1 {
                dai-format = "i2s";
                bitclock-master;   //not need setting in duplex
                frame-master;      //not need setting in duplex
                frame-inversion;
                link-name = "hobotdailink1";
                cpu {
                        sound-dai = <&i2s1>;
                };
                codec {
                        sound-dai = <&ac101>;
                        //sound-dai = <&ac102_0 0>;
                };
                platform {
                        sound-dai = <&i2sidma1>;
                };
        };
};
