/dts-v1/;
#include "hobot.dtsi"
#include "hobot-pinctrl.dtsi"
#include "hobot-clk.dtsi"
#include "memory-1g.dtsi"
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/phy/phy.h>
#include <dt-bindings/input/input.h>
/ {
	model = "Hobot X2 96boards";
	compatible = "hobot,x2-fpga";

	aliases {
		serial0 = &uart0;
		serial1 = &uart1;
		serial2 = &uart2;
		serial3 = &uart3;
		i2c0	= &i2c0;
		i2c1	= &i2c1;
		i2c2	= &i2c2;
		i2c3	= &i2c3;
		i2s0	= &i2s0;
		i2s1	= &i2s1;
		spi0	= &spi0;
		pwm0	= &pwm_0;
		pwm1	= &pwm_1;
		pwm2	= &pwm_2;
		bifsd	= &bifsd;
		bifspi	= &bifspi;
		mmc1	= &sdio0;
		mmc2	= &sdio1;
		sndcard0    = &snd0;
		idma0     = &i2sidma0;

	};

	chosen {
		bootargs = "earlycon loglevel=8 console=ttyS0 clk_ignore_unused";
		stdout-path = "serial0:115200n8";
	};

};

&i2c0 {
	status = "okay";
	#address-cells = <1>;
	#size-cells = <0>;
	ac108_0: ac108_0@0x3b {
		compatible = "ac108_ic_0";
		reg = <0x3b>;
		#sound-dai-cells = <1>;
	};

	ac108_1@0x35 {
		compatible = "ac108_ic_1";
		reg = <0x35>;
	};

	ac101@0x1a {
		compatible = "ac101";
		// pinctrl-names = "default";
		// pinctrl-0 = <&spk_amp_pins &gpclk0_pins>;
		spk-amp-switch = <71>;
		switch-irq = <72>;
		reg = <0x1a>;
		#sound-dai-cells = <0>;
	};

	
	x2_camera@0x7f {
	    compatible = "x2,camera";
	    reg = <0x7f>;
	};
	
	x2_lt9211@0x2d {
		compatible = "x2,lt9211";
		reg = <0x2d>;
		x2_lt9211_reset_pin = <85>;
	};

	tmp75c@48 {
                compatible = "ti,tmp75c";
		reg = <0x48>;
	};
	mp5416@69 {
		compatible = "mps,mp5416";
		reg = <0x69>;
		system-power-controller;
		regulators {
			vcc_cnn0_reg: DCDC1 {
				regulator-name = "VCC_CNN0";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1000000>;
				regulator-enable-ramp-delay = <450>;
			};

			vdd_core_pd_reg: DCDC2 {
				regulator-name = "VDD_CORE_PD";
				regulator-min-microvolt = <900000>;
				regulator-max-microvolt = <900000>;
				regulator-always-on;
				regulator-boot-on;
			};

			vcc_cnn1_reg: DCDC3 {
				regulator-name = "VCC_CNN1";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1000000>;
				regulator-enable-ramp-delay = <450>;
			};

			vcc_cpu_reg: DCDC4 {
				regulator-name = "VCC_CPU";
				regulator-min-microvolt = <800000>;
				regulator-max-microvolt = <1000000>;
				regulator-always-on;
				regulator-boot-on;
			};

			vdd_core_ao_reg: LDO3 {
				regulator-name = "VDD_CORE_AO";
				regulator-min-microvolt = <3300000>;
				regulator-max-microvolt = <3300000>;
				regulator-always-on;
				regulator-boot-on;
			};

			vdd_1v8_reg: LDO4 {
				regulator-name = "VDD_1V8";
				regulator-min-microvolt = <1800000>;
				regulator-max-microvolt = <1800000>;
				regulator-enable-ramp-delay = <70>;
				regulator-always-on;
				regulator-boot-on;
			};

			vdd_0v9_reg: LDO5 {
				regulator-name = "VDD_0V9";
				regulator-min-microvolt = <900000>;
				regulator-max-microvolt = <900000>;
				regulator-always-on;
				regulator-boot-on;
			};
		};
	};

};

&i2c1 {
	status = "disabled";
};

&pinctrl {
	status = "okay";
	gpioirq-bank-cfg = <118 0 0 0>;
};

&uart0 {
	status = "okay";
	clocks = <&uart0_mclk>;
	clock-names = "uart_mclk";
};

&uart1 {
	status = "okay";
	clocks = <&uart1_mclk>;
	clock-names = "uart_mclk";
};

&ips {
	//pinctrl-names = "bt_func", "dvp_func";
	//pinctrl-0 = <&btin_func &btout_func>;
	//pinctrl-1 = <&dvpin_func &dvpout_func>;
	status = "okay";
};

&isp {
	status = "okay";
};

&ipu {
	status = "okay";
};

&sif {
	status = "okay";
};
&mipi_host {
	status = "okay";
};

&mipi_dev {
	status = "okay";
};

&dma {
	status = "okay";
};

&x2dmatest {
	status = "disabled";
};

&rtc {
	status = "okay";
};

&pwm_0 {
	status = "disabled";
};

&spi0 {
	status = "okay";
};

&ethernet {
	status = "okay";
	clocks = <&eth0_ephy_2nddiv_clk>, <&eth0_prediv_clk>, <&eth0_div_clk>;
	clock-names = "phy_ref_clk", "mac_pre_div_clk", "mac_div_clk";

	pinctrl-names = "default";
	pinctrl-0 = <&eth_func>;

	/* local-mac-address = [ 00 11 22 33 44 55 ]; */
	phy-handle = <&phy1>;
	phy-mode = "rgmii-id";
	mdio {
		#address-cells = <0x1>;
		#size-cells = <0x0>;
		phy1: phy@0 {
			compatible = "marvell,88E1510","ethernet-phy-ieee802.3-c22";
			reg = <0x0>;
		};
	};
};

&cpu0 {
	status = "okay";
	cpu-supply = <&vcc_cpu_reg>;
};
&cpu1 {
	status = "okay";
	cpu-supply = <&vcc_cpu_reg>;
};

&cnn0 {
	status = "okay";
	cnn0-supply = <&vcc_cnn0_reg>;
};

&cnn1 {
	status = "okay";
	cnn1-supply = <&vcc_cnn1_reg>;
};

&iar {
	status = "okay";
};

&fb {
	status = "okay";
};

&bifspi {
	status = "okay";
};

&bifsd {
	status = "okay";
	/*cd-gpio = <91>;*/
};

&bifbase {
	/*bifbase: GPIO7[8]: 118, GPIO07[7]: 117*/
	status = "okay";
	bifbase_irq_pin = <118>;
	bifbase_tri_pin = <117>;
};

&bifeth {
	status = "okay";
};

&biflite_spi {
	status = "okay";
	frame_len_max = <262144>;
	frag_len_max = <1024>;
	frame_count = <4>;
};
&biflite_sd {
	status = "okay";
	frame_len_max = <262144>;
	frag_len_max = <32768>;
	frame_count = <12>;
};
&qspi {
	status = "okay";
	qspi-mode = <1>;
	#address-cells = <1>;
	#size-cells = <0>;
	clocks = <&sys_qspi_aclk>;
	clock-names = "qspi_aclk";

	flash@0 {
		compatible = "gd25lq128d";
		#address-cells = <1>;
		#size-cells = <1>;
		reg = <0x0>;
		spi-tx-bus-width = <4>;
		spi-rx-bus-width = <4>;
		spi-max-frequency = <50000000>;

		partition@qspi-uboot {
			label = "qspi-uboot";
			reg = <0x200000 0x200000>;
		};
	};
};

&sdio0 {
	status = "okay";
	bus-width = <8>;
	cap-mmc-highspeed;
	mmc-hs200-1_8v;
	non-removable;
	disable-wp;
};

&sdio1 {
	status = "okay";
	bus-width = <4>;
	cap-mmc-highspeed;
	cap-sd-highspeed;
	mmc-hs200-1_8v;
	broken-cd;
	disable-wp;	
};

&watchdog {
	status = "okay";
};

&i2s0 {
	status = "okay";
	#sound-dai-cells = <0>;
	clocks = <&i2s0_mclk>, <&i2s0_div_mclk>, <&i2s0_bclk>, <&i2s0_div_bclk>;
	clock-names = "i2s-mclk", "i2s-mclk-div", "i2s-bclk", "i2s0_div_bclk";
};


&ddr_monitor {
	status = "okay";
};

&onewire {
	status = "okay";
};

&temp {
	clocks = <&temp_sensor_div_clk>;
	clock-names = "tsensor_clk";
	status = "okay";
};

&soc_thermal {
	status = "okay";
	trips {
		target: trip-point@1 {
			temperature = <105000>;
		};
		soc_crit: soc-crit {
			temperature = <120000>;
		};
	};
};

&snd0 {
	model = "x2snd0";
	dai-link@0 {
		dai-format = "dsp_a";
		bitclock-master;
		frame-master;
		frame-inversion;
		link-name = "x2dailink0";
		cpu {
			sound-dai = <&i2s0>;
		};
		codec {
			sound-dai = <&ac108_0 0>;
		};
		platform {
			sound-dai = <&i2sidma0>;
		};
	};
};
